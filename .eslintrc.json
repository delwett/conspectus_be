{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint", 
    "prettier"
  ],
  "extends": [
    "plugin:prettier/recommended",
    "standard",
    "standard-with-typescript",
    "prettier",
    "prettier/@typescript-eslint",
    "prettier/standard"
  ],
  "rules": {
    "prettier/prettier": "error"
  }
}